<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayUserInfo"/>

            <ImageView
                android:id="@+id/bazaar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/uta" />

            <Button
                android:id="@+id/form_club_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5pt"
                android:background="@drawable/buttondefault"
                android:text="Form Club"
                android:textColor="@color/colorHomeTextViewColor"
                android:textSize="8pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttondefault"
                android:text="Search Items"
                android:textColor="@color/colorHomeTextViewColor"
                android:textSize="8pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Communicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttondefault"
                android:text="Communication"
                android:textColor="@color/colorHomeTextViewColor"
                android:textSize="8pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bst_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttondefault"
                android:text="Buy-Sell-Trade"
                android:textColor="@color/colorHomeTextViewColor"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>